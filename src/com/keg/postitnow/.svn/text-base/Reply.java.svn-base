package com.keg.postitnow;


/**
 * Reply class represents a reply to a postit
 */
public class Reply {
	/** 
	 * Reply's id
	 */
    private Long idReply;

    /** 
	 * Postit's id
	 */
    private Long idPostit;
    
	/** 
	 * Reply's content
	 */
    private String content;
    
	/** 
	 * Reply's author
	 */
    private String name;
    
	/** 
	 * Reply's author's avatar
	 */
	private String image;
	
	/** 
	 * Reply's date
	 */
    private String date;
    
	/** 
	 * Reply's user's id
	 */
    private Long userId;

	/** 
	 * Public constructor
	 * @param	idReply
	 * 			idPostit
	 * 			content
	 * 			name
	 * 			image
	 * 			date
	 * 			userId
	 */
	public Reply(Long idReply, Long idPostit, String content, String name, String image, String date, Long userId){
		this.idReply = idReply;
		this.content = content;
		this.name = name;
		this.image = image;
		this.date = date;
		this.userId = userId;
	}
	
	/** 
	 * Return the id of the reply
	 */
	public Long returnIdReply() {
		return this.idReply;
	}
	
	/** 
	 * Return the id of the postit
	 */
	public Long returnIdPostit() {
		return this.idPostit;
	}
	
	/** 
	 * Return the name of the author
	 */
	public String returnUsername() {
		return this.name;
	}
	
	/** 
	 * Return the content of the reply
	 */
	public String returnContent() {
		return this.content;
	}
	
	/** 
	 * Return the date of the reply
	 */
	public String returnDate() {
		return this.date;
	}

	/** 
	 * Return the image of the author
	 */	
	public String returnImage() {
		return this.image;
	}
	
	/** 
	 * Return the id of the author
	 */
	public Long returnUserId() {
		return this.userId;
	}
}
